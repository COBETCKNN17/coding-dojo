<h1>Quoting Dojo</h1>

@if(ViewBag.Error != null){
    <p style="color:red;"><b>@ViewBag.Error</b></p>
    <br>
}

<form action="/quotes" method="POST">
    <p>Your name: <br><input type="text" name="name"></p>
    <p>Your quote: <br><textarea name="quote" cols="30" rows="5"></textarea></p>
    <input type="submit" value="Add my quote!">
</form>

<br>

<a href="/quotes"><button>Skip to quotes!</button></a>