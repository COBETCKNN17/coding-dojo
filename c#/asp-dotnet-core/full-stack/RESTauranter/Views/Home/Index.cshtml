@{
    ViewData["Title"] = "Home Page";
}

<h1>Write a new Review:</h1>

@model Review

<form asp-controller="Home" asp-action="Create" method="POST">
    <div class="form-group">
        <span asp-validation-for="reviewer_name"></span>
        <label asp-for="reviewer_name">Reviewer Name:</label>
        <input class="form-control" asp-for="reviewer_name">
    </div>
    <div class="form-group">
        <span asp-validation-for="restaurant_name"></span>
        <label asp-for="restaurant_name">Restaurant Name:</label>
        <input class="form-control" asp-for="restaurant_name">
    </div>
    <div class="form-group">
        <span asp-validation-for="review_comments"></span>
        <label asp-for="review_comments">Review:</label>
        <input class="form-control" asp-for="review_comments">
    </div>
    <div class="form-group">
        <span asp-validation-for="visited"></span>
        <label asp-for="visited">Date visited:</label>
        <input class="form-control" asp-for="visited" type="date">
    </div>
    <div class="form-group">
        <span asp-validation-for="rating"></span>
        <label asp-for="rating">Rating:</label>
        <select class="form-control" asp-for="rating">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>