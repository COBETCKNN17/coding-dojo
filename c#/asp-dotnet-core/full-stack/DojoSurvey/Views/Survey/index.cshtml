<html>

<head>
  <title>Survey</title>
</head>

<body>
  @model DojoSurvey.Models.User

  <h1>Survey</h1>
  <form action="/process" method="POST">
    Your Name:
    <input type="text" name="name" asp-for="name">
    <span asp-validation-for="name"></span>
    <br> Dojo Location:
    <select name="location" asp-for="location" id="location">
      <option value="Chicago">Chicago</option>
      <option value="San Jose">San Jose</option>
      <option value="Seattle">Seattle</option>
      <option value="The Moon">The Moon</option>
    </select>
    <span asp-validation-for="location"></span>
    <br> Favorite Language:
    <select name="favLanguage" asp-for="favLanguage">
      <option value="Python">Python</option>
      <option value="HTML">HTML</option>
      <option value="C#">C#</option>
      <option value="JavaScript">JavaScript</option>
    </select>
    <span asp-validation-for="favLanguage"></span>
    <br>
    Comment (optional):
    <input type="textarea" name="comment" asp-for="comment">
    <span asp-validation-for="comment"></span>
    <br>
    <input type="submit" name="button" value="Submit">
  </form>
</body>

</html>