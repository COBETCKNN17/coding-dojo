<html>
    <head>
        <title>Quoting Dojo</title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <div id="container">
            <h2>Here are the awesome quotes!</h2>
            <br>
            <div>
                <% if(quotes) { %>
                    <% for(let i = 0; i < quotes.length; i++) { %>
                        <p>"<%= quotes[i].quote %>"</p>
                        <p>- <%= quotes[i].name %> at <%= quotes[i].createdAt %></p>
                        <p>----------</p>
                    <% } %>
                <% } %>
            </div>
            <div>
                <form id="back" method="GET" action="/">
                    <input id="back" type="submit" value="Back">
                </form>
            </div>  
        </div>
    </body>
</html>